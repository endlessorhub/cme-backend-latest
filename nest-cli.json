{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/cme-backend/src",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/cme-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/cme-backend",
  "projects": {
    "cme-backend": {
      "type": "application",
      "root": "apps/cme-backend",
      "entryFile": "main",
      "sourceRoot": "apps/cme-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cme-backend/tsconfig.app.json",
        "assets": [
          {
            "include": "../config/*.yml",
            "watchAssets": true,
            "outDir": "dist/apps/cme-backend/config"
          }
        ]
      }
    },
    "units-production-scheduler": {
      "type": "application",
      "root": "apps/units-production-scheduler",
